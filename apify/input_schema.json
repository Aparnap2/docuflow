{
    "title": "Input Schema",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "pdf_url": {
            "title": "PDF URL",
            "type": "string",
            "description": "Direct link to the PDF invoice.",
            "editor": "textfield"
        },
        "ollama_base_url": {
            "title": "Ollama Base URL",
            "type": "string",
            "description": "Base URL for Ollama API (default: http://host.docker.internal:11434)",
            "editor": "textfield",
            "default": "http://host.docker.internal:11434"
        },
        "llm_model": {
            "title": "LLM Model",
            "type": "string",
            "description": "Model to use for extraction (default: ministral-3:3b)",
            "editor": "textfield",
            "default": "ministral-3:3b"
        },
        "email": {
            "title": "Email (Optional)",
            "type": "string",
            "description": "Email for lead capture (optional)",
            "editor": "textfield"
        }
    },
    "required": ["pdf_url"]
}